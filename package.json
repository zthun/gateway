{
  "name": "@zthun/gateway",
  "version": "0.0.0",
  "description": "A micro application that handles api access to Zthunworks based applications.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/roadblock"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf 'dist' 'docs' 'reports' '*.tgz' '*.log' 'packages/**/dist' 'packages/**/docs' 'packages/**/*.tgz' 'packages/**/*.log'",
    "test": "jest --coverage --detectOpenHandles",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "npm run clean && npm run lint && npm test && npm run build",
    "docker:publish": "lerna run docker:publish",
    "docker:build": "lerna run docker:build",
    "docker": "npm run docker:build && npm run docker:publish",
    "prepare": "husky install",
    "release": "lerna publish --conventional-commits -m \"chore: publish [skip ci]\"",
    "version": "yarn install && git stage yarn.lock"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@testing-library/react": "^12.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.13",
    "@types/uuid": "^8.3.4",
    "@zthun/lint-janitor": "^11.2.0",
    "@zthun/lint-janitor-config": "^11.2.0",
    "@zthun/works.http": "^3.1.0",
    "@zthun/works.jest": "^3.0.2",
    "favicons": "^6.2.2",
    "favicons-webpack-plugin": "^5.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3"
  },
  "packageManager": "yarn@3.1.0"
}
