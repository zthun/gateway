{
  "name": "@zthun/gateway",
  "version": "0.0.0",
  "description": "A micro application that handles api access to Zthunworks based applications.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/roadblock"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf dist docs reports *.tgz *.log packages/**/dist packages/**/docs packages/**/*.tgz packages/**/*.log",
    "test": "jest --coverage --runInBand",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "npm run clean && npm run lint && npm test && npm run build",
    "docker:publish": "lerna run docker:publish",
    "docker:build": "lerna run docker:build",
    "docker": "npm run docker:build && npm run docker:publish",
    "prepare": "husky install",
    "release": "npm run make && lerna publish --conventional-commits -m \"chore: publish [skip ci]\"",
    "plink": "npm link @zthun/works.core @zthun/works.http @zthun/works.jest @zthun/works.react @zthun/works.nest"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@testing-library/react": "^12.1.2",
    "@types/express": "^4.17.13",
    "@types/history": "^4.7.9",
    "@types/jest": "^27.0.2",
    "@types/jsdom": "^16.2.13",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.7",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@zthun/eslint-config": "^11.0.0",
    "@zthun/htmlhint-config": "^11.0.0",
    "@zthun/lint-janitor": "^11.0.0",
    "@zthun/markdownlint-config": "^11.0.0",
    "@zthun/prettier-config": "^11.0.0",
    "@zthun/works.jest": "^2.0.0",
    "eslint": "^8.2.0",
    "favicons": "^6.2.2",
    "favicons-webpack-plugin": "^5.0.2",
    "html-webpack-plugin": "^5.5.0",
    "htmlhint": "^0.16.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "markdownlint": "^0.24.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.2",
    "uuid": "^8.3.2",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  },
  "packageManager": "yarn@3.1.0"
}
