{
  "name": "@zthun/gateway",
  "version": "0.0.0",
  "description": "A micro application that handles api access to Zthunworks based applications.",
  "author": "Anthony Bonta",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/zthun/roadblock"
  },
  "workspaces": [
    "packages/gateway.api",
    "packages/gateway.proxy",
    "packages/gateway.web"
  ],
  "scripts": {
    "clean": "rimraf dist docs reports *.tgz *.log packages/**/dist packages/**/docs packages/**/*.tgz packages/**/*.log",
    "test": "jest --coverage --runInBand",
    "lint": "lint-janitor",
    "build": "lerna run build",
    "make": "npm run clean && npm run lint && npm test && npm run build",
    "docker:publish": "lerna run docker:publish",
    "docker:build": "lerna run docker:build",
    "docker": "npm run docker:build && npm run docker:publish",
    "prepare": "husky install",
    "release": "npm run make && lerna publish --conventional-commits -m \"chore: publish [skip ci]\""
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/react": "^12.0.0",
    "@types/express": "^4.0.0",
    "@types/history": "^4.7.9",
    "@types/jest": "^27.0.1",
    "@types/jsdom": "^16.2.1",
    "@types/lodash": "^4.0.0",
    "@types/node": "^16.4.8",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "@zthun/eslint-config": "^10.1.0",
    "@zthun/htmlhint-config": "^10.2.0",
    "@zthun/lint-janitor": "^10.1.1",
    "@zthun/markdownlint-config": "^10.1.0",
    "@zthun/prettier-config": "^10.1.0",
    "@zthun/stylelint-config": "^10.1.0",
    "@zthun/works.jest": "^1.0.0",
    "@zthun/works.nest": "^1.0.0",
    "@zthun/works.react": "^1.1.0",
    "css-loader": "^6.2.0",
    "favicons-webpack-plugin": "^5.0.2",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "less-loader": "^10.0.1",
    "nodemon": "^2.0.1",
    "rimraf": "^3.0.0",
    "rxjs": "^7.3.0",
    "style-loader": "^3.2.1",
    "ts-jest": "^27.0.0",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.2",
    "uuid": "^8.3.2",
    "webpack": "^5.51.2",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.0"
  }
}
